<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="com.dev.opencalc.fragment.DisplayFragment" >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/color_display_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/calculatorExpressionDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_display_background"
            android:gravity="right"
            android:text="@string/symbol_zero"
            android:textSize="24sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/calculatorResultDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_display_background"
            android:gravity="right"
            android:textSize="32sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/keypadBackspaceButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_backspace_button"
                android:text="@string/symbol_backspace" />

            <Button
                android:id="@+id/keypadClearButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_clear_button"
                android:text="@string/symbol_clear" />

        </LinearLayout>

        <Button
            android:id="@+id/keypadEqualsButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/color_equal_button"
            android:text="@string/symbol_equals" />

    </LinearLayout>

</LinearLayout>
