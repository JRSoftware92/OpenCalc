<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.opencalc"
    android:versionCode="1"
    android:versionName="1.0" 
    android:allowBackup="false">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/calculator_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.CalculatorActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.FunctionListActivity"
            android:label="@string/title_activity_function_list" >
        </activity>
         <activity
            android:name=".activity.CreditsActivity"
            android:label="@string/text_credits" >
        </activity>
        <activity
            android:name=".activity.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name=".activity.GraphActivity"
            android:label="@string/title_activity_graph" >
        </activity>
        <activity
            android:name=".activity.FeedbackActivity"
            android:label="@string/title_activity_feedback" >
        </activity>
    </application>

</manifest>
